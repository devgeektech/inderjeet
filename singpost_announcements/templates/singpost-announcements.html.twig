{% if announcements is not empty %}
    <div class="layout-list-group mb-4">
        {% for announcement in announcements %}
            <div class="list-group-item">
                <div class="row">
                    <div class="col-lg-2">
                        <p class="date date-bold">{{ announcement.start_date|date('d M Y') }}</p>
                    </div>
                    <div class="col-lg-10">
                        <h4 class="title-news block-margin-small">{{ announcement.title }}</h4>
                        <div class="content">
                            {{ announcement.content.value|raw }}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
